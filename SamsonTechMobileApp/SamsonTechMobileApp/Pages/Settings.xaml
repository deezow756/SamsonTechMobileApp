<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SamsonTechMobileApp.Pages.Settings">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Settings" HorizontalTextAlignment="Center" FontSize="50" TextColor="LimeGreen" BackgroundColor="Transparent"/>
            <Label Text="OneDrive Options" HorizontalTextAlignment="Center" FontSize="30" TextColor="LimeGreen" BackgroundColor="Transparent"/>
            <Button Text="Sign In" x:Name="btnSignIn" Clicked="btnSignIn_Clicked" FontSize="30" TextColor="LimeGreen" BackgroundColor="Black" BorderColor="LimeGreen" BorderRadius="1"/>
            <Button Text="Sign Out" x:Name="btnSignOut" Clicked="btnSignOut_Clicked" FontSize="30" TextColor="LimeGreen" BackgroundColor="Black" BorderColor="LimeGreen" BorderRadius="1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>