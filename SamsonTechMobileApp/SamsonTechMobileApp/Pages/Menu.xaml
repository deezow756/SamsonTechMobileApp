<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SamsonTechMobileApp.Menu">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Label Text="Menu" HorizontalTextAlignment="Center" FontSize="50" />
            <Button Text="Display Orders" x:Name="btnDisplayOrders" Clicked="btnDisplayOrders_Clicked" FontSize="30"/>
            <Button Text="Add Order" x:Name="btnAddOrder" Clicked="btnAddOrder_Clicked" FontSize="30"/>
            <Button Text="Statistics" x:Name="btnStatistics" Clicked="btnStatistics_Clicked" FontSize="30"/>
            <ListView ItemsSource="" x:Name="listOrders" ItemSelected="listOrders_ItemSelected"/>
            <Label Text="OneDrive Options" HorizontalTextAlignment="Center" FontSize="30"/>
            <Button Text="Sync Changes" x:Name="btnSync" Clicked="btnSync_Clicked" FontSize="30"/>
            <Button Text="Sign In" x:Name="btnSignIn" Clicked="btnSignIn_Clicked" FontSize="30"/>
            <Button Text="Sign Out" x:Name="btnSignOut" Clicked="btnSignOut_Clicked" FontSize="30"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>